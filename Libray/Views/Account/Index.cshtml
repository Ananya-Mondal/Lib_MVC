@model IEnumerable<Libray.Models.User>


@{
    ViewData["Title"] = "Index";
}

<h1>Members</h1>

<p>
    <a asp-controller="Account" asp-action="SignUp">Create New</a>
</p>
<table>
    <tr>
        <td>
            <form asp-action="Index">
                <div class="form-group">
                   
                    <label id="lblSearch">Name :</label>
            <input type="text" id="search" name="search" />
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
               
            </form>
            @* @using (Html.BeginForm("Index", "Account", FormMethod.Post))
            {
                
                @Html.TextBox("search") <input type="submit" value="Search" />
            } *@
        </td>
    </tr>
</table>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdmin)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
           
            <td>
                <a asp-controller="Account" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Account" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



